@model cyclingcompare.comms.api.Email.ContactUs.ContactUsViewModel
@{
    <div>
        <h2>Cycling Compare Customer Service Email</h2>
        <div>
            <p>Hi Cycling Compare Admins</p>
            <p>This email has been generated by somebody completing the "Contact Us" form on the CyclingCompare site.</p>
            <p>The email has come from <b>@Model.FromName - @Model.FromEmail.</b></p>
            <p>The customer has sent the following message:</p>
            <p style="margin-left: 20px"><b>@Model.Body.</b></p>
        </div>
    </div>
}
